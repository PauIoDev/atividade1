<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edu.senac.atividade1">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ListaProdutos"
            android:label="@string/title_activity_lista_produtos"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Sobre"
            android:label="@string/title_activity_sobre" />
        <activity
            android:name=".Conversao"
            android:label="@string/title_activity_conversao" />
        <activity
            android:name=".CalculoIMC"
            android:label="@string/title_activity_calculo_imc" />
        <activity
            android:name=".Principal"
            android:label="@string/title_activity_principal" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>